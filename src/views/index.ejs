<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Anime Store | Online</title>
  <link rel="stylesheet" href="/sass/style.css">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.1/css/all.css" crossorigin="anonymous">
  <!--ICONO PÁGINA-->
  <link rel="icon" href="/img/loguito.png">
</head>
<body>
  <header>
    <div class="container">
      <div class="left-section">
        <a href="/">
        <h1 class="logo"><img class="img__logo" src="/img/loguito.png"></h1>
        </a>
      </div>
      <div class="center-section">
        <nav class="nav__header">
          <ul>
            <li><a href="/">INICIO</a></li>
            <li class="productos-nav"><a href="#">PRODUCTOS</a>
              <ul class="submenu">
                <li><a href="/products/figures">FIGURAS</a></li>
                <li><a href="#">VESTIMENTA</a></li>
                <li><a href="#">MANGAS</a></li>
              </ul>
            </li>
            <li class="contacto"><a href="#">CONTACTO</a></li>
          </ul>
        </nav>
      </div>      
      <div class="right-section">
        <div class="icons">
          <a href="#"><i class="fas fa-shopping-cart"></i></a>
          <a href="/users/login"><i class="fas fa-user"></i></a>
        </div>
      </div>
    </div>
  </header>
  
  
  <div class="carousel">
    <div class="slide"><img src="/img/gatitoBanner.png" alt="Slide 1"></div>
  </div>

  <main class="container__productos">
    <section class="productos">
      <h2 class="section__title">¡ PRODUCTOS DESTACADOS !</h2>
      <div class="product__shine">
        <div class="productos-container">
          <% recents.forEach(product => { %>
          <div class="producto">
            <a class="href__style" href="/products/detail/<%= product.id %>">
            <img class="img__width" src="/img/<%= product.image %>" alt="<%= product.name %>">
            <h3><%= product.name %></h3>
            <p>Precio: $<%= product.price %></p>
            <button>Comprar</button>
          </a>
          </div>
          <% }) %>
        </div>
      </div>
    </section>

    <!-- SECCION 2 - PRODUCTOS RECIEN AGREGADOS -->
    <section class="productos">
      <div class="last__add__product--title">
        <h2 class="section__title"> RECIÉN AGREGADOS </h2>
      </div>
      <div class="product__shine">
        <div class="productos-container">
          <% news.forEach(product => { %>
          <div class="producto">
            <a class="href__style" href="/products/detail/<%= product.id %>">
            <img class="img__width" src="/img/<%= product.image %>" alt="<%= product.name %>">
            <h3><%= product.name %></h3>
            <p>Precio: $<%= product.price %></p>
            <button>Comprar</button>
            </a>
          </div>
          <% }) %>
        </div>
      </div>
    </section>
  </main>

  <footer>
    <div class="container">
      <p>&copy; 2024 Tienda Anime</p>
    </div>
  </footer>

  <script src="/js/script.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>
</body>
</html>
